@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-decoration-none" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user"></i>
                <strong>@User.Identity.GetUserName()</strong>
            </a>
            <div class="dropdown-menu dropdown-menu-right dropdown-default" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" href="/Dashboard/Index">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>

                <a class="dropdown-item" href="/Manage/ChangePassword">
                    <i class="fas fa-lock"></i>
                    Change Password
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
        </li>
    }
}
else
{
    <a href="/Account/Login" class="nav-link waves-effect waves-light">
        <i class="fas fa-sign-in-alt"></i>Login
    </a>
}

