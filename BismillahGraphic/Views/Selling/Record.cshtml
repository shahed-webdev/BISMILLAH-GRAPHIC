
@{
    ViewBag.Title = "Selling Record";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="card card-body m-md-3">
    <h3 class="mb-3">Selling Record</h3>

        <table id="DataTable" class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>#Receipt</th>
                    <th>Vendor</th>
                    <th>Amount</th>
                    <th>Paid</th>
                    <th>Due</th>
                    <th>Date</th>
                </tr>
            </thead>
        </table>
   
</div>


@section scripts
{
    <script>
        $(function() {
            dataTable.getData();
        });

        //get data
        var dataTable = {
            table: null,
            init: function() {
                dataTable.table = $("#DataTable").DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Selling/IndexData",
                        type: "POST"
                    },
                    columns:
                    [
                        { data: "SellingSN", "render": function(data, type, row, meta) {
                                return `<a class="blue-text" href="/Selling/Receipt/${row.SellingID}">${data}</a>`;
                            }
                        },
                        { data: "VendorCompanyName" },
                        { data: "SellingAmount" },
                        { data: "SellingPaidAmount" },
                        { data: "SellingDueAmount" },
                        { data: "SellingDate", "render": function(data) { return moment(data).format('DD MMM YYYY') } }
                    ],
                    columnDefs: [
                        { 'searchable': false, 'targets': [2, 4, 5] },
                        { 'className': "text-right", "targets": [2, 3, 4] },
                        { 'className': "text-left", "targets": [1] }
                    ]
                });
            },
            getData: function() {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            }
        }
    </script>
}
