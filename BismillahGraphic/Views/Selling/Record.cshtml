@model IEnumerable<BismillahGraphic.DataCore.SellingRecord>
@{
    ViewBag.Title = "Selling Record";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="card card-body m-md-3">
    <h3 class="mb-3">Selling Record</h3>
   
    <div class="table-responsive">
        <table id="DataTable" class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>#Receipt</th>
                    <th>Vendor</th>
                    <th>Amount</th>
                    <th>Paid</th>
                    <th>Due</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a class="blue-text" href="/Selling/Receipt/@item.SellingID">@item.SellingSN</a></td>
                        <td class="text-left">@item.VendorCompanyName</td>
                        <td class="text-right">@item.SellingAmount/-</td>
                        <td class="text-right">@item.SellingPaidAmount/-</td>
                        <td class="text-right">@item.SellingDueAmount/-</td>
                        <td>@item.SellingDate.ToString("d MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


