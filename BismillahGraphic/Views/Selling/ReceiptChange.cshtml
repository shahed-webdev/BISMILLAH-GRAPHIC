@model BismillahGraphic.DataCore.SellingUpdateViewModel
@{
    ViewBag.Title = "Change Receipt";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

@section Styles{
    <style>
        #vendor-info li { font-size: 19px; line-height: 3.17; }
        #vendor-info i { color: #13c7d4 }

        #payment-area li strong { font-size: 19px; }
        #inputDiscount, #inputPaid { display: inline-block; width: auto; border-radius: 50px; text-align: right; color: #000; }

        .has-error { border: 2px solid #ff0000 }
    </style>
}

<h3 class="mb-3">Change Receipt</h3>

<section class="card card-body">
    <div class="md-form mt-0">
        <input placeholder="Add Product" type="text" id="inputProduct" class="form-control" autocomplete="off" />
    </div>

    <div class="table-responsive">
        <table class="table text-center nowrap">
            <thead>
                <tr>
                    <th><strong>SN</strong></th>
                    <th><strong>Product&nbsp;Name</strong></th>
                    <th><strong>Length</strong></th>
                    <th><strong>Width</strong></th>
                    <th><strong>Square&nbsp;Inch</strong></th>
                    <th><strong>Unit&nbsp;Price</strong></th>
                    <th><strong>Line&nbsp;Total</strong></th>
                    <th><strong>Remove</strong></th>
                </tr>
            </thead>
            <tbody id="table-row">
                @{
                    var serialNo = 1;
                    foreach (var item in Model.SellingCarts)
                    {
                        <tr>
                            <td><strong class="SN">@serialNo</strong></td>
                            <td>@item.ProductID</td>
                            <td><input type="number" step="0.01" class="length form-control" value="@item.Length" name="Length" placeholder="Length" /></td>
                            <td><input type="number" step="0.01" class="width form-control" value="@item.Width" name="Width" placeholder="Width" /></td>
                            <td><input type="number" step="0.01" class="quantity form-control" value="@item.SellingQuantity" name="SellingQuantity" placeholder="Square Inch" disabled /></td>
                            <td><input type="number" step="0.01" class="unitPrice form-control" value="@item.SellingUnitPrice" name="SellingUnitPrice" placeholder="Unit Price" /></td>
                            <td><input type="number" step="0.01" class="lineTotal form-control" value="@(item.SellingQuantity*item.SellingUnitPrice)" name="LineTotal" placeholder="Line Total" disabled /></td>
                            <td><a style="color: #ff0000" class="delete fas fa-trash-alt" href="/Products/Delete/@item.ProductID"></a></td>
                        </tr>
                        serialNo++;
                    }
                }
            </tbody>
        </table>
    </div>
</section>

<section class="card card-body my-4">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <ul id="vendor-info" class="list-group list-group-flush">
                <li class="list-group-item"><i class="fas fa-building"></i> ${data.VendorCompanyName}</li>
                <li class="list-group-item"><i class="fas fa-user-tie"></i> ${data.VendorName}</li>
                <li class="list-group-item"><i class="fas fa-phone"></i> ${data.VendorPhone}</li>
                <li class="list-group-item"><i class="fas fa-map-marker-alt"></i> ${data.VendorAddress}</li>
            </ul>
        </div>

        <div class="col-lg-6">
            <ul class="list-group list-group-flush" id="payment-area">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Total Price</strong>
                    <strong>৳<span id="totalPrice"></span></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Discount</strong>
                    <div>
                        <input placeholder="Discount" id="inputDiscount" type="text" class="form-control" />
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center green-text">
                    <strong>Total Payable</strong>
                    <strong>৳<span id="grandTotal"></span></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Total Paid</strong>
                    <strong>৳<span id="paidAmount"></span></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center orange-text">
                    <strong>Total Due</strong>
                    <strong>৳<span id="totalDue"></span></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Payment Method</strong>
                    <strong id="paymentMethod"></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Selling Date</strong>
                    <strong id="sellingDate"></strong>
                </li>
            </ul>

            <div class="mt-4 text-right">
                <input type="button" value="Submit" id="btnSelling" class="btn aqua-gradient btn-rounded" />
                <h5 id="vendor-error" class="mt-2 text-center"></h5>
            </div>
        </div>
    </div>
</section>


@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.2/bootstrap3-typeahead.min.js"></script>
    <script src="~/scripts/receipt-change.js"></script>
}