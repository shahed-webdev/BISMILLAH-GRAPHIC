@section Scripts{
    <script>
        $("#NavToggle").on('click', 'a[href^="#"]', function (e) {
            e.preventDefault();
            $('html, body').stop().animate({
                scrollTop: $($(this).attr('href')).offset().top
            }, 1000, 'linear');
        });
    </script>
}